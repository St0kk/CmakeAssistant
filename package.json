{
  "name": "cmakeassistant",
  "displayName": "CmakeAssistant`",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CmakeBuildNRun",
        "icon": "./assets/arrow.png",
        "title": "Cmake: Build and Run"
      },
      {
        "command": "CmakeBuildNTest",
        "icon" : "./assets/cmake.png",
        "title": "Cmake: Build and Test"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "CmakeBuildNRun",
          "group": "CmakeAssistant",
          "id" : "2"
        },
        {
          "command": "CmakeBuildNTest",
          "group": "CmakeAssistant",
          "id": "1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
